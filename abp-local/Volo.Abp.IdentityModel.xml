            <summary>
            Possible values: "client_credentials" or "password".
            Default value: "client_credentials".
            </summary>
        </member>
        <member name="P:Volo.Abp.IdentityModel.IdentityClientConfiguration.ClientId">
            <summary>
            Client Id.
            </summary>
        </member>
        <member name="P:Volo.Abp.IdentityModel.IdentityClientConfiguration.ClientSecret">
            <summary>
            Client secret (as plain text - without hashed).
            </summary>
        </member>
        <member name="P:Volo.Abp.IdentityModel.IdentityClientConfiguration.UserName">
            <summary>
            User name.
            Valid only if <see cref="P:Volo.Abp.IdentityModel.IdentityClientConfiguration.GrantType"/> is "password".
            </summary>
        </member>
        <member name="P:Volo.Abp.IdentityModel.IdentityClientConfiguration.UserPassword">
            <summary>
            Password of the <see cref="P:Volo.Abp.IdentityModel.IdentityClientConfiguration.UserName"/>.
            Valid only if <see cref="P:Volo.Abp.IdentityModel.IdentityClientConfiguration.GrantType"/> is "password".
            </summary>
        </member>
